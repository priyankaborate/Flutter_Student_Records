<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDetails">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/googleImgCard"
        android:paddingRight="10dp"
        android:foreground="?android:attr/selectableItemBackground"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:id="@+id/studentImage"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_account_circle_black_24dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentImage"
        android:id="@+id/outerName"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameIconOuter"
        android:layout_marginTop="15dp"
        >

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:background="@color/white"
            android:backgroundTint="#00000000"
            android:id="@+id/nameIcon"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relNameInner"
            android:layout_toRightOf="@+id/nameIconOuter"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Name"
                android:textSize="20dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentName"
                android:layout_centerVertical="true"
                android:layout_below="@+id/name"
                android:textSize="17dp"
                android:paddingLeft="5dp" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outerName"
        android:id="@+id/outerCollege"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collegeIconOuter"
            android:layout_marginTop="15dp"
            >

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_school_24"
                android:background="@color/white"
                android:backgroundTint="#00000000"
                android:id="@+id/collegeIcon"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relCollegeInner"
            android:layout_toRightOf="@+id/collegeIconOuter"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/college"
                android:text="College"
                android:textSize="20dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentCollege"
                android:layout_centerVertical="true"
                android:layout_below="@+id/college"
                android:textSize="17dp"
                android:paddingLeft="5dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outerCollege"
        android:id="@+id/outerAge"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ageIconOuter"
            android:layout_marginTop="15dp"
            >

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_cake_24"
                android:background="@color/white"
                android:backgroundTint="#00000000"
                android:id="@+id/ageIcon"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relageInner"
            android:layout_toRightOf="@+id/ageIconOuter"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/age"
                android:text="Age"
                android:textSize="20dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentAge"
                android:layout_centerVertical="true"
                android:layout_below="@+id/age"
                android:textSize="17dp"
                android:paddingLeft="5dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outerAge"
        android:id="@+id/outerphoneNum"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneIconOuter"
            android:layout_marginTop="15dp"
            >

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_local_phone_24"
                android:background="@color/white"
                android:backgroundTint="#00000000"
                android:id="@+id/phoneIcon"
                android:tint="@color/colorPrimary"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relphoneInner"
            android:layout_toRightOf="@+id/phoneIconOuter"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:text="Phone Number"
                android:textSize="20dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentPhoneNum"
                android:layout_centerVertical="true"
                android:layout_below="@+id/phone"
                android:textSize="17dp"
                android:paddingLeft="5dp" />
        </RelativeLayout>
    </RelativeLayout>

        </RelativeLayout>

</androidx.cardview.widget.CardView>
  </RelativeLayout>
</ScrollView>